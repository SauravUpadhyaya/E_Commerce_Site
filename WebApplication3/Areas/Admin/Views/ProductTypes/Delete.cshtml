@model WebApplication3.Models.ProductType
@{
    ViewData["Title"] = "Delete";
}

<h2 class="text-info">Delete Product Type</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Delete" asp-controller="ProductTypes" method="post" role="form">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="display:flex">

                <label asp-for="Producttype" style="width: 150px;" class="control-label"></label>
                <input asp-for="Producttype" class="form-control" readonly="readonly" />

            </div>
            
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this?')"/>
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}